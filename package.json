{
  "name": "talos",
  "version": "0.1.0",
  "private": true,
  "description": "Talos - Your AI chief of staff",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:server": "pnpm --filter @talos/server dev",
    "dev:web": "pnpm --filter @talos/web dev",
    "dev:docs": "pnpm --filter @talos/docs dev",
    "build": "pnpm -r run build",
    "build:docs": "pnpm --filter @talos/docs build",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm --filter @talos/server test",
    "test:coverage": "pnpm --filter @talos/server test:coverage",
    "clean": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules dist"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "vitest": "^4.0.18"
  }
}
